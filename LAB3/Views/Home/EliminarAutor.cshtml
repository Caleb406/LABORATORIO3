@model LAB3.Models.Autor

@{
    ViewData["Title"] = "Eliminar Autor";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Eliminar Autor</h2>
                    <p class="text-center">¿Estás seguro de que quieres eliminar al autor <strong>@Model.Autor1</strong>?</p>
                    <form id="formEliminar" method="post" action="/Home/ConfirmarEliminarAutor">
                        <input type="hidden" name="id" value="@Model.IdAutor" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
