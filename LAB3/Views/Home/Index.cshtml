@model List<LAB3.Models.Autor>

@{
    ViewData["Title"] = "Lista de Autores";
}

<div class="container">
    <div class="text-center mt-5">
        <h1 class="display-4 text-primary">Bienvenido</h1>
        <p class="lead text-info">Aprenda sobre <a href="https://docs.microsoft.com/aspnet/core" class="text-success">cómo crear aplicaciones web con ASP.NET Core</a>.</p>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-warning text-white">
            <h5>Lista de Autores</h5>
        </div>
        <div class="card-body">
            <a class="btn btn-success btn-sm mb-3" href="/Home/RegistroAutor">Crear Nuevo</a>

            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre Autor</th>
                        <th>Nacionalidad</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdAutor</td>
                            <td>@item.Autor1</td>
                            <td>@item.NacionalidadAutor</td>
                            <td>@item.Descripcion</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="EditarAutor" asp-controller="Home" asp-route-id="@item.IdAutor">Editar</a>
                                <a class="btn btn-danger btn-sm" href="/Home/EliminarAutor/@item.IdAutor">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
